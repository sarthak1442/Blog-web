<%- include("partials/header") %>

<h1>All Posts</h1>
<ul>
  <% posts.forEach(post => { %>
  <li>
    <a href="/posts/<%= post.id %>"><%= post.title %></a>
    <form
      action="/posts/<%= post.id %>?_method=DELETE"
      method="POST"
      style="display: inline"

    >
      <button type="submit">Delete</button>
    </form>
    <a href="/posts/<%= post.id %>/edit">Edit</a>
  </li>
  <% }) %>
</ul>

<%- include("partials/footer") %>
